<panel name="container" init="init(page)" columns="2" top="10" left="10" bottom="10"
       right="10" gap="50" border="true">
    <panel halign="center" gap="5" top="10" left="10" bottom="10" right="10" border="true">
        <label text="i18n.fog"/>
        <combobox name="fog" text="i18n.yes" action="fogChange(this)">
            <choice text="i18n.yes"/>
            <choice text="i18n.no"/>
        </combobox>
    </panel>
    <panel halign="center" gap="5" top="10" left="10" bottom="10" right="10" border="true">
        <label text="i18n.days"/>
        <combobox name="day_limit" text="i18n.unlimited" action="dayLimitChange(day_limit.text)">
            <choice text="i18n.unlimited"/>
        </combobox>
    </panel>
    <panel halign="center" gap="5" top="10" left="10" bottom="10" right="10" border="true">
        <label text="i18n.funds"/>
        <combobox name="funds" text="1000" action="fundsChange(funds.text)"/>
    </panel>
    <panel halign="center" gap="5" top="10" left="10" bottom="10" right="10" border="true">
        <label text="i18n.income"/>
        <combobox name="income" text="1000" action="incomeChange(income.text)"/>
    </panel>
    <panel width="250" height="50" colspan="2" weighty="1" top="10">
        <button weighty="1" halign="left" valign="bottom" text="Back" action="back()"/>
        <button weightx="1" weighty="1" halign="right" valign="bottom" text="Continue" action="continueToNextState()"/>
    </panel>
</panel>

