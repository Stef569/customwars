<?xml version="1.0" encoding="ISO-8859-1"?>
<panel name="container" init="init(page)" columns="1" top="10" left="10" bottom="10" right="10" border="true">
    <label colspan="2" weightx="1" text="Choose a Map" alignment="center"/>
    <panel columns="2" gap="5">
        <panel gap="4">
            <label text="Category:"/>
            <combobox name="map_categories" weightx="1" action="filterMapsOnCategory(map_categories.text)"/>
        </panel>
        <label name="map_name" width="350" text="map name"/>
        <list name="map_list" width="250" height="360" rowspan="2" action="mapSelected()"/>
        <panel name="mini_map" height="300"/>
        <panel border="true">
            <panel name="map_city_count" weightx="1" halign="center"/>
        </panel>
    </panel>
    <panel width="250" height="50" weighty="1" top="10">
        <button halign="left" weighty="1" valign="bottom" text="Back" action="back()"/>
        <button halign="right" weightx="1" weighty="1" valign="bottom" text="Continue" action="continueToNextState()"/>
    </panel>
</panel>
